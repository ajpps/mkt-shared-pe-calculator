    <script>
        const metaInput = document.getElementById('meta-services');
        const googleInput = document.getElementById('google-services');
        const tiktokInput = document.getElementById('tiktok-services');
        const spotifyInput = document.getElementById('spotify-services');
        const youtubeInput = document.getElementById('youtube-ctv');
        const totalMediaSpendRange = document.getElementById('total-media-spend-range');
        const totalMediaSpendNumber = document.getElementById('total-media-spend-number');
        const customizationsCheckbox = document.getElementById('customizations-checkbox');

        const minimumSpendEl = document.getElementById('minimum-spend');
        const currentSpendEl = document.getElementById('current-spend');

        // Output elements
        const totalMediaSpendEl = document.getElementById('total-media-spend');
        const totalAgencyFeeEl = document.getElementById('total-agency-fee');
        const totalCreativeCostsEl = document.getElementById('total-creative-costs');

        const affiliateMediaSpendEl = document.getElementById('affiliate-media-spend');
        const affiliateAgencyFeeEl = document.getElementById('affiliate-agency-fee');
        const affiliateCustomizationFeeEl = document.getElementById('affiliate-customization-fee');
        const totalAffiliateCostEl = document.getElementById('total-affiliate-cost');

        const strongerMediaSpendEl = document.getElementById('stronger-media-spend');
        const strongerAgencyFeeEl = document.getElementById('stronger-agency-fee');
        const strongerCreativeProductionEl = document.getElementById('stronger-creative-production');
        const totalStrongerContributionEl = document.getElementById('total-stronger-contribution');
        
        const totalSavingsEl = document.getElementById('total-savings');

        // Helper to format currency
        function formatCurrency(value) {
            return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(value);
        }

        // Main calculation function
        function calculateCosts() {
            const metaServices = parseInt(metaInput.value) || 0;
            const googleServices = parseInt(googleInput.value) || 0;
            const tiktokServices = parseInt(tiktokInput.value) || 0;
            const spotifyServices = parseInt(spotifyInput.value) || 0;
            const youtubeServices = parseInt(youtubeInput.value) || 0;
            const campaignDuration = 6;
            
            // DYNAMIC CALCULATION for Creative Production Savings
            let creativeSavings = 0;
            if (metaServices > 0) {
                creativeSavings += 5000 + (Math.max(0, metaServices - 1) * 2500);
            }
            creativeSavings += googleServices * 750;

            // Calculate minimum MONTHLY spend based on service lines
            const calculatedMinimumMonthlySpend = (metaServices * 8000) + (googleServices * 5000) + (tiktokServices * 10000) + (spotifyServices * 10000) + (youtubeServices * 10000);
            minimumSpendEl.textContent = `Min Monthly: ${formatCurrency(calculatedMinimumMonthlySpend)}`;
            totalMediaSpendRange.min = calculatedMinimumMonthlySpend;
            totalMediaSpendNumber.min = calculatedMinimumMonthlySpend;

            // Adjust slider if current value is less than new minimum
            if (parseInt(totalMediaSpendRange.value) < calculatedMinimumMonthlySpend) {
                totalMediaSpendRange.value = calculatedMinimumMonthlySpend;
                totalMediaSpendNumber.value = calculatedMinimumMonthlySpend;
            }

            const currentMonthlySpend = parseInt(totalMediaSpendNumber.value) || 0;
            currentSpendEl.textContent = `Current Monthly: ${formatCurrency(currentMonthlySpend)}`;
            
            // 6-Month Calculations
            const totalMediaSpend6Mo = currentMonthlySpend * campaignDuration;
            const totalAgencyFee6Mo = totalMediaSpend6Mo * 0.15;

            // Stronger's Contribution
            const strongerMediaContribution6Mo = Math.min(totalMediaSpend6Mo * 0.5, 60000 * campaignDuration);
            const strongerAgencyFeeContribution6Mo = Math.min(totalMediaSpend6Mo, 250000 * campaignDuration) * 0.15;
            
            const totalStrongerContribution6Mo = strongerMediaContribution6Mo + strongerAgencyFeeContribution6Mo + creativeSavings;

            // Affiliate's Costs
            const affiliateMediaSpend6Mo = totalMediaSpend6Mo - strongerMediaContribution6Mo;
            const affiliateAgencyFee6Mo = totalAgencyFee6Mo - strongerAgencyFeeContribution6Mo;
            
            // Customization Fee Calculation
            let customizationFee = 0;
            if (customizationsCheckbox.checked) {
                customizationFee = (metaServices + googleServices + tiktokServices + spotifyServices + youtubeServices) * 225;
            }
            
            const totalCreativeCost6Mo = creativeSavings + customizationFee;
            const totalAffiliateCost6Mo = affiliateMediaSpend6Mo + affiliateAgencyFee6Mo + customizationFee;

            // Update UI
            totalMediaSpendEl.textContent = formatCurrency(totalMediaSpend6Mo);
            totalAgencyFeeEl.textContent = formatCurrency(totalAgencyFee6Mo);
            totalCreativeCostsEl.textContent = formatCurrency(totalCreativeCost6Mo);

            affiliateMediaSpendEl.textContent = formatCurrency(affiliateMediaSpend6Mo);
            affiliateAgencyFeeEl.textContent = formatCurrency(affiliateAgencyFee6Mo);
            affiliateCustomizationFeeEl.textContent = formatCurrency(customizationFee);
            totalAffiliateCostEl.textContent = formatCurrency(totalAffiliateCost6Mo);

            strongerMediaSpendEl.textContent = formatCurrency(strongerMediaContribution6Mo);
            strongerAgencyFeeEl.textContent = formatCurrency(strongerAgencyFeeContribution6Mo);
            strongerCreativeProductionEl.textContent = formatCurrency(creativeSavings);
            totalStrongerContributionEl.textContent = formatCurrency(totalStrongerContribution6Mo);
            
            totalSavingsEl.textContent = formatCurrency(totalStrongerContribution6Mo);
        }
        
        // Event listeners
        metaInput.addEventListener('input', calculateCosts);
        googleInput.addEventListener('input', calculateCosts);
        tiktokInput.addEventListener('input', calculateCosts);
        spotifyInput.addEventListener('input', calculateCosts);
        youtubeInput.addEventListener('input', calculateCosts);
        totalMediaSpendRange.addEventListener('input', () => {
            totalMediaSpendNumber.value = totalMediaSpendRange.value;
            calculateCosts();
        });
        totalMediaSpendNumber.addEventListener('input', () => {
            totalMediaSpendRange.value = totalMediaSpendNumber.value;
            calculateCosts();
        });
        customizationsCheckbox.addEventListener('change', calculateCosts);

        // Initial calculation on page load
        document.addEventListener('DOMContentLoaded', calculateCosts);
    </script>

</body>
</html>
